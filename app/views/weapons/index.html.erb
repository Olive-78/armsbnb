<h1>Weapons</h1>
<div class="cards">
  <% @weapons.each do |weapon| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path weapon.photo.key %>)">
          <%= link_to weapon.name, weapon_path(weapon) %>
    </div>
  <%#= link_to weapon.name, weapon_path(weapon) %>
  <%#= cl_image_tag weapon.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
</div>

<%= link_to 'Add a weapon', new_weapon_path  %>

